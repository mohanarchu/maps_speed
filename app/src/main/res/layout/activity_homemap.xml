<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2">
    <LinearLayout
        android:weightSum="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@color/my"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Welcome"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Mohanraj"
                android:textSize="15dp" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="2.1"
            app:cardBackgroundColor="@color/my1"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
               android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/to_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ODO"
                    android:textColor="@color/smoke"
                    android:textSize="10dp" />
                <TextView

                    android:id="@+id/odo"
                    android:text="0Km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/smoke"
                    android:textSize="20dp" />
            </LinearLayout>
                <TextView
                    android:id="@+id/trip"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/smoke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="My Trip"
                    android:layout_marginLeft="10dp" />
                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView

                        android:layout_marginStart="10dp"
                        android:text="0KM"
                       android:gravity="left|center"
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/smoke"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:gravity="left|center"
                        android:text="0MIN"
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/smoke"
                        android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:layout_weight="0.5"
                    android:gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:text="......"
                    android:id="@+id/speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/smoke"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
 android:layout_marginTop="5dp"
            android:id="@+id/contact"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:shape="ring"
            app:cardBackgroundColor="@color/smoke"
            app:cardCornerRadius="28dp">

            <Button
                android:id="@+id/start"
                android:layout_width="50dp"

                android:textColor="@color/smoke"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_bike"
                android:text="start" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:id="@+id/visible"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:shape="ring"
            android:visibility="gone"
            app:cardBackgroundColor="@color/smoke"
            app:cardCornerRadius="28dp">
            <Button
                android:textColor="@color/smoke"
                android:id="@+id/stop"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_palm_of_the_hand" />
        </android.support.v7.widget.CardView>
<android.support.design.widget.CoordinatorLayout
    android:layout_weight="0.3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/smoke"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/design"
                android:layout_gravity="start|bottom"
                android:id="@+id/iv_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="My Trips" />
            <TextView
                android:textSize="15dp"
                android:textColor="@color/smoke"
                android:gravity="center"
                android:background="@drawable/design1"
                android:layout_gravity="right|bottom"
                android:id="@+id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Profile" />
</android.support.design.widget.CoordinatorLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:id="@+id/li_replace">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_replace">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Homemap" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>